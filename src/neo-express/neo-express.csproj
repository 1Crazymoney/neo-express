    <Compile Remove="Commands\WalletCommand.Delete.cs" />
    <Compile Remove="Commands\WalletCommand.Export.cs" />
    <Compile Remove="Commands\WalletCommand.List.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.3.4" />
