<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <VersionPrefix>0.8.0</VersionPrefix>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <RootNamespace>Neo.Express</RootNamespace>
    <PackAsTool>true</PackAsTool>
    <LangVersion>7.3</LangVersion>
    <AssemblyName>neo-express</AssemblyName>
    <Description>neo-express is a NEO developer blockchain tool</Description>
    <PackageId>Neo.Express</PackageId>
    <PackageTags>NEO;Blockchain;Smart Contract</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>Neo Global Development Seattle</Authors>
    <PackageProjectUrl>https://github.com/neo-project/neo-express</PackageProjectUrl>
    <PackageIconUrl>https://neo-cdn.azureedge.net/images/neo-logo/72.png</PackageIconUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.3.4" />
    <PackageReference Include="neo" Version="2.10.3" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\abstractions\abstractions.csproj" />
    <ProjectReference Include="..\express2\express2.csproj" />
  </ItemGroup>
</Project>
